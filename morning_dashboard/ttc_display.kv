
<LineRectangle@Widget>:
    canvas:
        Color:
            rgb: (1,0,0,1)
        Line:
            width: 1.5
            rounded_rectangle: (self.x, self.y, self.width + 1.5, self.height +1.5, 5)


<buffer@widget>:
    canvas:
        Color:
            rgb: (0,0,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

